html, body{
    height: 100%;
    padding: 0;
    margin: 0;
}
body{background-color: transparent;}

//color
.white-bg{background-color:#fff; }

// Utilities
.relative{position: relative;}
.absolute{position: absolute;}
.fw800{font-weight:800;}
.h100{height:100%;}
.cover{background-size: cover; background-position: center center;}
.block{display: block;}
.inline-block{display: inline-block;}

.vAlign {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

//Typography
.no-outline{outline: none;}
.no-hover{text-decoration: none !important;}

//Nav
.site-header{z-index: 10;}

//Footer
footer{
    font-size:14px;
    hr{border-color:#B2B2B2;}
}

//Logo
.site-header__logo{
    position: absolute;
    z-index: 9999;
}
#supply-logo{
    width: 90px;
    height:130px;
    position: absolute;
}
.dot{
    border-radius: 50%;
    position: absolute;
    width: 13px;
    height: 13px;

    &.fill{background-color: #000000}
    &.outline{border:2px solid #000000}
}

//Pages
#about-header{
    margin-top: -270px;
}
.circle{
    background: #333333;
    border-radius: 50%;
    text-align: center;
    color: white;
    position: absolute;
    &.small{width:150px;height:150px;}
    &.large{width:300px;height:300px;}
}

// Components
.divider{
    position: relative;
    width: 100%;
    max-width: 100px;
    margin: 20px 0 25px 1px;
    border-bottom: 5px solid;
    .dark{ border-color: #333 }
    .light{ border-color: #fff }
}

.test-area{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    &.perspective{
        -moz-perspective: 500;
        -webkit-perspective: 500;
        perspective: 500;
        transform-style: preserve-3d;
    }
}
.cart-loader {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    background-color:rgba(0,0,0,0.6);
    text-align: center;
    img{
        max-height: 100%;
        transform: scale(0);
    }
}

.ball {
    background: #333333;
    border-radius: 50%;
    position: absolute;
    width: 100px;
    height: 100px;
    left: 50%;
    top: 50%;
    margin: -50px 0 0 -50px;
    transform-origin: 50%;
    text-align: center;
    color: white;
}

//Product
.uiCircle{
    border-radius:50%;
    position: absolute;
    background-color: #333333;
    color: #ffffff;
    width: 75px;
    height:75px;
    margin-left: -37.5px;
    margin-top: -37.5px;
    cursor: pointer;

    &.productName{width: 125px; height:125px; margin-left: -62.5px; margin-top: -62.5px; text-align: center; h1{font-size: 1.25em !important;}}
    &.productPrice{width: 125px; height:125px; margin-left: -62.5px; margin-top: -62.5px; text-align: center; background-color: transparent; border: 3px solid #333333;color: #333333;}
    &.productImage{ border: 3px solid #333333;background-color: whitesmoke;}
}
