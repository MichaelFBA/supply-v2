html, body{
    height: 100%;
    padding: 0;
    margin: 0;
}
body{background-color: transparent;}

//color
.white-bg{background-color:#fff; }
.text-white{color: #ffffff;}

// Utilities
.relative{position: relative;}
.absolute{position: absolute;}
.fw800{font-weight:700;}
.h100{height:100%;}
.w100{width:100%;}
.cover{background-size: cover; background-position: center center;}
.block{display: block;}
.inline-block{display: inline-block;}
.tight{line-height: 1em;}
.page-top-padding{padding-top: 120px;}
.pt5{padding-top: 5px;}

.vAlign {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

//Card
.card, .card-img-top{border-radius: 0;}

//Columns
.two-column-to-one{
    -webkit-column-count: 1; /* Chrome, Safari, Opera */
    -moz-column-count: 1; /* Firefox */
    column-count: 1;
    @media (min-width: 48em) {
        -webkit-column-count: 2; /* Chrome, Safari, Opera */
        -moz-column-count: 2; /* Firefox */
        column-count: 2;
    }
}

//Typography
.no-outline{outline: none;}
.no-hover{text-decoration: none !important;}
body, input, textarea, button, select, p {
    font-weight: 400;
    line-height: 1.4;
}

p{
    margin: 0 0 8px 0;
}

.display-4 {
    font-size: 2.8rem;
}

//Nav
.site-header{z-index: 10;}

//Footer
footer{
    font-size:14px;
    hr{border-color:#B2B2B2;}
}

//Logo
.site-header__logo{
    position: absolute;
    z-index: 9999;
}
#supply-logo{
    width: 90px;
    height:130px;
    position: absolute;
}
.dot{
    border-radius: 50%;
    position: absolute;
    width: 13px;
    height: 13px;

    &.fill{background-color: #000000}
    &.outline{border:2px solid #000000}
}

//Pages
#about-header{
    margin-top: 20px;
    // Small devices (landscape phones, 34em and up)
    @media (min-width: 34em) {

    }
    // Medium devices (tablets, 48em and up)
    @media (min-width: 48em) {
        margin-top: -215px;
    }

    // Large devices (desktops, 62em and up)
    @media (min-width: 62em) {
        margin-top: -220px;
    }

    // Extra large devices (large desktops, 75em and up)
    @media (min-width: 75em) { }

}
.circle{
    background: #333333;
    border-radius: 50%;
    text-align: center;
    color: white;
    position: absolute;
    margin-left: -65px;
    margin-top: -65px;

    &.small{width:130px;height:130px;}
    &.large{width:260px;height:260px;margin-left: -130px; margin-top: -130px;}
}
.ball-form{
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #e5e5e5 !important;
    border-radius: 0px;
    padding: 10px 0px;
    text-align: center;
    &:focus{
        border: none;
        border-bottom: 1px solid #e5e5e5 !important;
    }
}
.ball-form-button{
    &:hover{
        border: none !important;
    }
}

// Components
.divider{
    position: relative;
    width: 100%;
    max-width: 100px;
    margin: 20px 0 25px 1px;
    border-bottom: 3px solid;
    &.dark{ border-color: #333 }
    &.light{ border-color: #fff }
}

.test-area{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    &.perspective{
        -moz-perspective: 500;
        -webkit-perspective: 500;
        perspective: 500;
        transform-style: preserve-3d;
    }
}
.cart-loader {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    background-color:rgba(0,0,0,0.6);
    text-align: center;
    img{
        max-height: 100%;
        transform: scale(0);
    }
}

.ball {
    background: #333333;
    border-radius: 50%;
    position: absolute;
    width: 120px;
    height: 120px;
    left: 50%;
    top: 50%;
    margin: -60px 0 0 -60px;
    transform-origin: 50%;
    text-align: center;
    color: white;
    padding:10px
}

//Product
.js-qty, .selector-wrapper{display: none;}
.uiCircle{
    border-radius:50%;
    position: absolute;
    background-color: #333333;
    color: #ffffff;
    width: 55px;
    height:55px;
    margin-left: -27.5px;
    margin-top: -27.5px;
    cursor: pointer;
    font-size: 0.7em;
    @media (min-width: 48em) { margin-left: -37.5px; margin-top: -37.5px; width: 75px; height:75px; font-size: 1em; }

    &.productName{
        width: 100px;
        height:100px;
        margin-left: -50px;
        margin-top: -50px;
        text-align: center;
        cursor: move !important;
        // cursor: url(http://wiki.ooo4kids.org/images/b/b3/Cursor-Hand.svg), auto;
        @media (min-width: 48em) { margin-left: -62.5px; margin-top: -62.5px; width: 125px; height:125px; }
        h1{
            font-size: 1.25em;
        }
    }
    &.productPrice{
        width: 100px;
        height:100px;
        margin-left: -50px;
        margin-top: -50px;
        text-align: center;
        @media (min-width: 48em) { margin-left: -62.5px; margin-top: -62.5px; width: 125px; height:125px; }
        background-color: #00f3bd;
        color: #ffffff;
    }
    &.productImage{
        background-color: whitesmoke;
    }
}
