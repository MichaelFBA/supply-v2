.relative{position: relative;}
.absolute{position: absolute;}

.test-area {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

.ball {
    background: #ff2420;
    border-radius: 50%;
    position: absolute;
    width: 100px;
    height: 100px;
    left: 50%;
    top: 50%;
    margin: -50px 0 0 -50px;
    transform-origin: 50%;
    text-align: center;
    color: white;
}

.vAlign {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
