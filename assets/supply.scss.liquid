$bgColour: #f2f2f2;
html{
    background-color: $bgColour;
}
html, body{
    height: 100%;
    padding: 0;
    margin: 0;
}
body{background-color: transparent;}

a{
    &.underline{
        text-decoration: underline;
    }
}

::-moz-selection { background: #00f3bd; }
::selection { background: #00f3bd; }

//color
.white-bg{background-color:#fff; }
.text-white{color: #ffffff;}

// Utilities
.relative{position: relative;}
.absolute{position: absolute;}
.fw800{font-weight:700;}
.h100{height:100%;}
.w100{width:100%;}
.cover{background-size: cover; background-position: center center;}
.block{display: block;}
.inline-block{display: inline-block;}
.tight{line-height: 1em;}
.page-top-padding{padding-top: 120px;}
.pt5{padding-top: 5px;}
.m-b,.m-y {
    margin-bottom: 2rem!important;
}

.vAlign {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

//Card
.card, .card-img-top{border-radius: 0;}
.card-footer, .card-header {
    background-color: #ffffff;
    padding: 1.25rem 1.25rem;

    .supplier-header{
        color: #9B9B9B;
        font-weight: 600;
        text-transform: uppercase;
    }
    .supplier-location{
        float: right;
        font-size: 0.8em;
    }
}

//Columns
.two-column-to-one{
    -webkit-column-count: 1; /* Chrome, Safari, Opera */
    -moz-column-count: 1; /* Firefox */
    column-count: 1;
    @media (min-width: 48em) {
        -webkit-column-count: 2; /* Chrome, Safari, Opera */
        -moz-column-count: 2; /* Firefox */
        column-count: 2;
    }
}

//Typography
.no-outline{outline: none;}
.no-hover{text-decoration: none !important;}
body, input, textarea, button, select, p {
    font-weight: 400;
    line-height: 1.4;
}

p{
    margin: 0 0 8px 0;
}

h1, h2, h3, h4, h5, h6{
    font-weight: 600;
}

.display-4 {
    font-size: 2.8rem;
}

//Nav
.site-header{z-index: 10;}
#supply-nav{
    li{
        color: #333;
    }
}

// Modal
.modal-header{
    color: #9B9B9B;
    font-weight: 600;
    text-transform: uppercase;
    .modal-title{
        font-size: 1em;
    }

}
.modal-content {
    border-radius: 0;
}
.modal{
    cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/close_8c55283b-972f-46ec-98b9-d36b1f61c24a.svg?6043832662984718641), auto;
}
.modal-dialog{
    cursor: auto;
}

//Footer
footer{
    font-size:14px;
    hr{border-color:#B2B2B2;}
}

//Logo
.site-header__logo{
    position: absolute;
    z-index: 9999;
}
#supply-logo{
    width: 90px;
    height:130px;
    position: absolute;
    transform: scale(0.7);
    @media (min-width: 48em) {
        transform: scale(1);
    }
}
.dot{
    border-radius: 50%;
    position: absolute;
    width: 13px;
    height: 13px;

    &.fill{background-color: #000000}
    &.outline{border:2px solid #000000}
}

//Pages
#about-header{
    margin-top: 20px;
    // Small devices (landscape phones, 34em and up)
    @media (min-width: 34em) {

    }
    // Medium devices (tablets, 48em and up)
    @media (min-width: 48em) {
        margin-top: -215px;
    }

    // Large devices (desktops, 62em and up)
    @media (min-width: 62em) {
        margin-top: -220px;
    }

    // Extra large devices (large desktops, 75em and up)
    @media (min-width: 75em) { }

}
.supplier-overflow{
    max-height: 192px;
    overflow: scroll;
}
.circle{
    background: #333333;
    border-radius: 50%;
    text-align: center;
    color: white;
    position: absolute;
    margin-left: -65px;
    margin-top: -65px;

    &.small{width:130px;height:130px;}
    &.large{width:260px;height:260px;margin-left: -130px; margin-top: -130px;}
}
.ball-form{
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #e5e5e5 !important;
    border-radius: 0px;
    padding: 10px 0px;
    text-align: center;
    &:focus{
        border: none;
        border-bottom: 1px solid #e5e5e5 !important;
    }
}
.ball-form-button{
    &:hover{
        border: none !important;
    }
}

#supplier{
    h1{
        text-align: center;
        color: white;
        font-size: 2em;
        small{
            display: block;
            font-size: 50%;
        }
        @media (min-width: 34em) {
            font-size: 3em;
        }
        @media (min-width: 48em) {
            font-size: 4em;
        }
        @media (min-width: 62em) {
            font-size: 5em;
        }

    }
}

// About
.play-button-hover{
    cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/play_61d2455e-fe8a-41c2-9a28-72dbe766f682.svg?6043832662984718641),  auto;
}

// Components
.divider{
    position: relative;
    width: 100%;
    max-width: 100px;
    margin: 20px 0 25px 1px;
    border-bottom: 3px solid;
    &.dark{ border-color: #333 }
    &.light{ border-color: #fff }
}

.test-area{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    &.perspective{
        -moz-perspective: 500;
        -webkit-perspective: 500;
        perspective: 500;
        transform-style: preserve-3d;
    }
}
.cart-loader {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    background-color:rgba(0,0,0,0.6);
    text-align: center;
    img{
        max-height: 100%;
        transform: scale(0);
    }
}

.ball {
    background: #333333;
    border-radius: 50%;
    position: absolute;
    width: 120px;
    height: 120px;
    left: 50%;
    top: 50%;
    margin: -60px 0 0 -60px;
    transform-origin: 50%;
    text-align: center;
    color: white;
    padding:10px
}

//Product
body.featured{
    overflow: hidden;
    #product-image-overlay{
        position: fixed;
        top: 0px;
        left: 0px;
        bottom:0px;
        right:0px;
        background-color: $bgColour;
        overflow-y: scroll;
        z-index: 2000;

        img{
            width: 100%;
            cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/close_8c55283b-972f-46ec-98b9-d36b1f61c24a.svg?6043832662984718641), auto;
        }

        .blurred-image{
            -webkit-filter: blur(25px);
        }
    }
}

#AddToCartForm{
    height: 100%;
    background-size: contain !important;
    background-position: center center !important;
}

#SupplierModal{

    .card{
        border:none;
    }
}

.product-image-container{
    background-color:#b8b8b8;
}

.product-images{
    cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/open_1d0911c9-4781-4f71-a3c5-13275c319dcf.svg?6043832662984718641), auto;
}


.js-qty, .selector-wrapper{display: none;}
.uiCircle{
    border-radius:50%;
    position: absolute;
    background-color: #333333;
    color: #ffffff;
    width: 55px;
    height:55px;
    margin-left: -27.5px;
    margin-top: -27.5px;
    cursor: pointer;
    h4{
        font-size: 0.7em;
        @media (min-width: 48em) {
            font-size: 1em;
        }
    }

    @media (min-width: 48em) {
        margin-left: -37.5px;
        margin-top: -37.5px;
        width: 75px;
        height:75px;
    }

    &.productName{
        width: 85px;
        height:85px;
        margin-left: -50px;
        margin-top: -50px;
        text-align: center;
        cursor: move !important;
        @media (min-width: 48em) {
            margin-left: -62.5px;
            margin-top: -62.5px;
            width: 125px;
            height:125px;
        }

        h1{
            font-size: 0.8em;
            @media (min-width: 48em) {
                font-size: 1em;
            }
        }
    }
    &.productPrice{
        width: 85px;
        height:85px;
        margin-left: -50px;
        margin-top: -50px;
        text-align: center;
        background-color: #00f3bd;
        color: #ffffff;
        @media (min-width: 48em) {
            margin-left: -62.5px;
            margin-top: -62.5px;
            width: 125px;
            height:125px;
        }
        h4{
            font-size: 0.8em;
            @media (min-width: 48em) {
                font-size: 1.4em;
            }
        }
    }
    &.productImage{
        background-color: #b8b8b8;
    }
}

//Homepage
.product-homepage{
    position: relative;
    display: block;
    cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/open_1d0911c9-4781-4f71-a3c5-13275c319dcf.svg?6043832662984718641), auto;
    -webkit-transition: ease-out, all 0.3s; /* Safari 3.1 to 6.0 */
    transition: ease-out, all 0.3s;

    &:hover{
        opacity: 0.95;
        p{
            opacity: 1;
        }
    }
    p{
        -webkit-transition: ease-out, all 0.3s; /* Safari 3.1 to 6.0 */
        transition: ease-out, all 0.3s;
        position: absolute;
        width: 100%;
        bottom:-5px;
        left: 0px;
        text-align: center;
        opacity: 0;
    }
}

// VIDEO
#video{
    -webkit-transition: ease-out, all 1s; /* Safari 3.1 to 6.0 */
    transition: ease-out, all 1s;
    position: absolute;
    z-index: 999;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/close_8c55283b-972f-46ec-98b9-d36b1f61c24a.svg?6043832662984718641), auto;
    background-color: rgba(0, 0, 0, 0.5);
    height: 100%;

    .video-wrap{
        cursor: url(https://cdn.shopify.com/s/files/1/1073/8830/files/play_61d2455e-fe8a-41c2-9a28-72dbe766f682.svg?6043832662984718641), auto;
        width: 90%;
        position: relative;
        top: 50%;
        transform: translateY(-50%);
        margin: auto auto;
        display: block;

        @media (min-width: 34em) {
            width: 80%
        }
        @media (min-width: 48em) {
            width: 80%
        }
        @media (min-width: 62em) {
            width: 75%;
        }

        video{
            width: 100%;
            -webkit-box-shadow: 0px 0px 39px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 0px 0px 39px 0px rgba(0,0,0,0.75);
            box-shadow: 0px 0px 39px 0px rgba(0,0,0,0.75);
            background-color: #333;
        }
    }
}

.transitionOffScreen{
    transform: translate(0px, -100%);
    -webkit-transform: translate(0px, -100%);
    -moz-transform: translate(0px, -100%);
    -o-transform: translate(0px, -100%);
    -ms-transform: translate(0px, -100%);
}

//Packery
.grid{
    opacity: 0;
    -webkit-transition: ease-out, all 3s; /* Safari 3.1 to 6.0 */
    transition: ease-out, all 3s;
    min-height: 100%;
    &.loaded{
        opacity: 1;
    }
}
/* fluid 4 columns, 4% gutter */
.grid-sizer,
.grid-item {
    width: 50%;

    @media (min-width: 34em) {
        width: 50%
    }
    @media (min-width: 48em) {
        width: 33%
    }
    @media (min-width: 62em) {
        width: 25%;
    }
 }

.gutter-sizer { width: 0%; }

/* 2 columns wide */
.grid-item--width2 {
    width: 100%;
    @media (min-width: 34em) {
        width: 100%
    }
    @media (min-width: 48em) {
        width: 66%
    }
    @media (min-width: 62em) {
        width: 50%;
    }
}
