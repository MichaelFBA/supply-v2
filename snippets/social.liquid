<script>
$(document).ready(function() {


    var width = $('#social-area').width();
    var $body = $('body');

    var balls = ui.select('.small');
    balls.each(function(ball) {
        console.log(ball)
      ball.set({
        values: {
          originX: 0,
          originY: 0,
          x: 0,
        }
      })
    })

    var trackBall = new ui.Track({
      values: {
        x: {},
        y: {}
      }
    });

    var springBack = new ui.Simulate({
      simulate: 'spring',
      spring: 500,
      friction: 0.2,
      values: {
        x: {
          to: 200
        },
        y: {
          to: 200
        }
      }
    });

    $body.on('mousedown touchstart', '.small', function(event) {
      event.stopPropagation();
      event.preventDefault();

      activeBall = ui.select(this);
      activeBall.start(trackBall.extend({
        smooth: 30
      }), event);

      $body.on('mouseup touchend', function(event) {
        event.stopPropagation();
        event.preventDefault();
        activeBall.start(springBack);
      });
    });


})

</script>
