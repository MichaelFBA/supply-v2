{% assign number_of_related_products_to_show = 2 %}
{% assign image_size = 'medium' %}
{% assign heading = 'Other fine products' %}

{% capture number_of_related_products_to_fetch %}{{ number_of_related_products_to_show | plus: 1 }}{% endcapture %}

{% if collection == null  or collection.handle == 'all' %}
{% assign found_a_collection = false %}
{% for c in product.collections %}
  {% if found_a_collection == false and c.handle != 'all' %}
    {% assign found_a_collection = true %}
    {% assign collection = c %}
  {% endif %}
{% endfor %}
{% endif %}

{% if collection %}
{% assign current_product_found = false %}
{% assign current_product_title = product.title %}
{% for product in collection.products limit: number_of_related_products_to_fetch %}
{% if product.title == current_product_title %}
   {% assign current_product_found = true %}
{% else %}
   {% unless current_product_found == false and forloop.last %}
   {% include 'product-grid-item' %}
   {% endunless %}
{% endif %}
{% endfor %}
{% endif %}
